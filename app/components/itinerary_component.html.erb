<div class="row opaque-bg">
  <div class="col-lg p-4">
  
    <h1><b><%= "#{label} Itinerary" %></b></h1><br>

    <% if parks.count > 0 %>
      <h3><b>Parks</b></h3>
      <div id="parks"><% parks.each do |park| %>
        <%= render ParkComponent.new park: park, saved: saved %>
      <% end %></div>
    <% end %>

    <% if businesses.count > 0 %>
    <h3><b>Businesses</b></h3>
      <div id="businesses"><% businesses.each do |business| %>
        <%= render BusinessComponent.new business: business, saved: saved %>
      <% end %></div>
    <% end %>

    <% if saved %>
      <%= button_to 'Delete Itinerary', itinerary_path(id), method: :delete %><br>
    <% else %>
      <%= form_with url: itineraries_path, method: :post do |f| %>
        <%= f.hidden_field :search, value: label %>
        <p><%= f.submit 'Save Itinerary' %></p>
      <% end %>
      <%= link_to 'Search Again', root_path %>
    <% end %>
  </div>
</div>

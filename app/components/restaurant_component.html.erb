<div id="restaurant" class="p-2">
  <% if !restaurant.thumbnail.blank? %>
    <img id="image-format" class="m-2" src="<%= restaurant.thumbnail %>">
  <% end %>
  <h3 class="text-gray-500 m-2"><b><%= link_to restaurant.name, restaurant.url %></b></h5>
  <p class="m-2"><b>Rating: </b><%= restaurant.rating %></p>
  <p class="m-2"><b>Price: </b><%= restaurant.price %></p>
  <p class="m-2"><b>Categories: </b><%= restaurant.categories %></p>
  <p class="m-2"><b>Location: </b><%= restaurant.address %></p>
  <p class="m-2"><b>Phone: </b><%= restaurant.phone %></p>
  <p class="m-2"><%= button_to "Remove #{restaurant.name}", restaurant_path(restaurant), method: :delete, class: 'text-gray-500 m-2' if saved %></p>
</div>
<div class="bg-white bg-opacity-70 flex justify-between items-center w-full">
  <%= content_tag :div, class: 'flex text-sm' do %>
    <%= link_to 'SKEDADDLE', root_path, data: { turbo_frame: 'home' }, class: 'm-2 font-bold' %>
    <%= link_to 'About', about_path, data: { turbo_frame: 'home' }, class: 'm-2' %>
    <%= link_to 'Itineraries', itineraries_path, data: { turbo_frame: 'home' }, class: 'm-2' if logged_in %>
    <%= button_to 'Sign Out', destroy_user_session_path, method: :delete, class: 'm-2' if logged_in %>
    <%= button_to 'Sign In', user_google_oauth2_omniauth_authorize_path, data: { turbo: false },
                                         class: 'm-2' if !logged_in %>
  <% end %>

  <div class="flex text-sm">
    <% flash.each do |name, msg| %>
      <%= content_tag :span, msg, class: "m-2 error" %>
    <% end %>
  </div>
</div>

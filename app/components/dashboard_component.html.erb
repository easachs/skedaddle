<div class="opaque-bg">
  <div class=" flex justify-between text-lg text-gray-500 px-4">
    <%= link_to 'SKEDADDLE', root_path, class: 'font-bold p-4' %>
    <ul class="flex p-4">
      <li><%= link_to 'Itineraries', itineraries_path, class: 'm-2' if logged_in %></li>
      <li><%= link_to 'About', about_path, class: 'm-2' %></li>
      <li><%= link_to 'Contact', contact_path, class: 'm-2' %></li>
      <% if logged_in %>
        <li><%= button_to 'Log Out', sessions_path, method: :delete, class: 'ml-2' %></li>
      <% else %>
        <li><%= link_to 'Log In', '/auth/google_oauth2', class: 'ml-2' %></li>
      <% end %>
    </ul>
  </div>
</div>
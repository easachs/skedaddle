<div class="opaque-bg">
  <div class="flex text-gray-500 px-4">
    <%= link_to 'SKEDADDLE', root_path, class: 'font-bold p-4' %>
    <div class="flex p-2">
      <%= link_to 'Itineraries', itineraries_path, class: 'm-2' if logged_in %>
      <%= link_to 'About', about_path, class: 'm-2' %>
      <%= link_to 'Contact', contact_path, class: 'm-2' %>
      <% if logged_in %>
        <%= button_to 'Log Out', sessions_path, method: :delete, class: 'm-2' %>
      <% else %>
        <%= link_to 'Log In', '/auth/google_oauth2', class: 'm-2' %>
      <% end %>
    </div>
  </div>
</div>
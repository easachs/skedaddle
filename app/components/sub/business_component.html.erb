<%= tag.div id: 'business', class: 'mb-4 sm:mb-6' do %>
  <%= render(Core::ZoomComponent.new) { business.thumbnail } if business.thumbnail.present? %>
  <%= link_to business.name, business.url, class: 'font-bold m-2' %>
  <%= tag.div class: 'text-sm sm:text-base' do %>
    <p class="m-2"><b>Rating: </b><%= business.rating %></p>
    <%= tag.p safe_join([tag.b('Price: '), business.price]), class: 'm-2' if business.price.present? %>
    <p class="m-2"><b>Categories: </b><%= business.categories %></p>
    <p class="m-2"><b>Location: </b><%= business.location %></p>
    <%= tag.p safe_join([tag.b('Phone: '), business.phone]), class: 'm-2' if business.phone.present? %>
  <% end %>
  <%= button_to "Remove #{business.name}", business_path(business), method: :delete, class: 'm-2' if saved %>
<% end %>

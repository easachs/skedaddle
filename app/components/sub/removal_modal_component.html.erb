<%= render Core::ModalComponent.new trigger: (button_tag trigger_text, type: 'button', class: trigger_class) do %>
  <%= tag.div 'Are you sure you want to delete this item?', class: 'text-center' %>
  <%= tag.div id: 'removal', class: 'flex justify-between mx-8 mt-2' do %>
    <%= button_to 'Delete', removal_path, method: :delete, class: 'btn red-btn m-2', data: { turbo: } %>
    <%= link_to 'Cancel', '#', data: { action: 'modal#close' }, class: 'btn grey-btn m-2' %>
  <% end %>
<% end %>

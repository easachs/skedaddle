<%= tag.div data: { controller: 'modal' } do %>
  <%= tag.div data: { action: 'click->modal#open' } do %>
    <%= image_tag content&.strip, class: 'hidden sm:block image-format m-2' %>
  <% end %>

  <%= tag.div class: 'fixed inset-0 z-40 bg-gray-900 bg-opacity-50 hidden',
              data: { modal_target: 'modal', action: 'click->modal#close' } do %>
    <%= tag.div style: 'top: 50%; left: 50%; transform: translate(-50%, -50%); position: fixed;',
                class: 'rounded shadow-md z-50' do %>
      <%= image_tag content&.strip, data: { action: 'click->modal#close' } %>
    <% end %>
  <% end %>
<% end %>

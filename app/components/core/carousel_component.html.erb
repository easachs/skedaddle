<%= content_tag :div, class: 'lg:flex items-center' do %>
  <%= content_tag :div, class: 'w-full lg:w-3/5' do %>
    <%= content_tag :div, class: 'bg-white bg-opacity-70 rounded-xl sm:rounded-none sm:rounded-tl-xl' do %>
      <%= content %>
    <% end %>
  <% end %>
  <%= content_tag :div, class: 'hidden lg:block lg:w-2/5' do %>
    <%= content_tag :div, data: { controller: 'carousel' } do %>
      <% (1..6).to_a.each do |num| %>
        <%= content_tag :div, data: { carousel_target: 'photo', action: 'click->carousel#nextSlide' } do %>
          <%= image_tag "slide-#{num}.jpg", class: 'w-100', style: 'border-bottom-right-radius: 12px;' %>
        <% end %>
      <% end %>
    <% end %>
  <% end %>
<% end %>

<% lat = coordinates[:lat] %>
<% lon = coordinates[:lon] %>
<% key = ENV['GOOGLE_MAPS_KEY'] %>

<%= tag.div class: 'flex justify-center items-center w-full h-[65vh] sm:h-[75vh] p-2 sm:pt-4' do %>
  <iframe class='w-full h-[65vh] sm:h-[70vh] rounded-lg' loading='lazy' allowfullscreen
          src="https://www.google.com/maps/embed/v1/view?zoom=10&center=<%= lat %>,<%= lon %>&key=<%= key %>"></iframe>
<% end %>

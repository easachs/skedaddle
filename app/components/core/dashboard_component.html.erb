<%= content_tag :div, class: 'bg-white bg-opacity-70 flex justify-between items-center w-full p-2' do %>
  <%= link_to 'SKEDADDLE', root_path, data: { turbo_frame: 'home' }, class: 'p-2 font-bold' %>
  <%= link_to 'About', about_path, data: { turbo_frame: 'home' }, class: 'p-2' %>
  <%= link_to 'Itineraries', itineraries_path, data: { turbo_frame: 'home' }, class: 'p-2' if @logged_in %>
  <%= button_to 'Sign Out', destroy_user_session_path, method: :delete, form: { style: 'display: inline;' } if @logged_in %>
  <%= link_to 'Sign In', new_user_session_path, data: { turbo_frame: 'home' }, class: 'p-2' unless @logged_in %>

  <%= content_tag :div, class: 'flex text-sm', style: 'display: inline;' do %>
    <% flash.each do |name, msg| %>
      <%= content_tag :span, msg, class: 'm-2 error' %>
    <% end %>
  <% end %>
<% end %>

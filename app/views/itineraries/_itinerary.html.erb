<div id="<%= dom_id itinerary %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Search:</strong>
    <%= itinerary.search %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">User:</strong>
    <%= itinerary.user_id %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this itinerary", itinerary, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Edit this itinerary", edit_itinerary_path(itinerary), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>

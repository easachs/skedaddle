                <%= label_tag 'restaurants[thai]', 'Thai' %></p>
              </div>
            </div>

            <p class='py-2 ml-2'><%= form.submit 'SKEDADDLE', data: { turbo: false },
                class: 'bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded' %></p>
          <% end %>
        </div>
      <% end %>
    <% end %>
  <% end %>
  <%= content_tag :div, class: 'hidden lg:block lg:w-2/5' do %>
    <%= render CarouselComponent.new %>
  <% end %>
<% end %>

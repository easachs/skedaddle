<%= turbo_frame_tag 'home' do %>
  <div class="sm:flex items-center">
    <div class="sm:w-1/2">
      <div class="bg-white bg-opacity-70 rounded-xl sm:rounded-none sm:rounded-l-xl">
        <%= turbo_frame_tag 'carousel' do %>
          <div class="p-4 text-center">
            <%= form_with url: contact_path, method: :post do |form| %>
              <h1 class="text-3xl font-bold">Contact</h1>
                <br>
                <div class='lg:flex'>
                  <div class='lg:w-1/2 lg:pr-1'>
                    <%= form.text_field :name, value: current_user&.name, placeholder: 'Name', class: 'w-full h-8 mb-2 rounded', readonly: current_user, required: true %>
                  </div>
                  <div class='lg:w-1/2 lg:pl-1'>
                    <%= form.email_field :email, value: current_user&.email, placeholder: 'Email', class: 'w-full h-8 mb-2 rounded', readonly: current_user, required: true %>
                  </div>
                </div>
                <%= form.text_area :message, value: nil, placeholder: 'Message', rows: 4, class: 'w-full rounded', required: true %>
              <div class="text-center">
                <%= form.submit "Send", class: 'bg-blue-500 hover:bg-blue-700 text-white font-bold py-1 px-4 rounded' %>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>

    <div class="w-1/2 mb-5 hidden sm:block">
      <%= render CarouselComponent.new %>
    </div>
  </div>
<% end %>
